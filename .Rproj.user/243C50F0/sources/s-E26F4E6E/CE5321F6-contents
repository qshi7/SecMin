x=seq(0,1,0.001)
y=sqrt(1-x^2)
plot(x,y, xlim=c(0.03,0.98), ylim=c(0.03,0.98), type="l")

N=1000
draws1=runif(N)
draws2=runif(N)
plot(x,y, xlim=c(0.03,0.98), ylim=c(0.03,0.98), type="l")
colors=as.numeric(draws2<sqrt(1-draws1^2))
points(draws1, draws2, pch=1, cex=0.4, col=colors+1)

sum(colors)/N*4


